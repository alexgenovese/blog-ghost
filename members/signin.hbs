{{!< ../default}}

<header class="site-header">
    {{> site-header}}
</header>
<main id="site-main" class="site-main site-signin outer">
    <div class="inner">

    {{#if @member}}

        {{!-- Logged in: Redirect home --}}
        <script>window.location = '{{@site.url}}';</script>

    {{else}}

    <article class="post-full">
        <header class="post-full-header">
            <h1 class="post-full-title">
                Welcome back!
            </h1>
            
            <p class="post-full-custom-excerpt">
                Continue reading private docs for boosting your business!
            </p>
        </header>


        <aside class="post-upgrade-cta">
            <div class="post-upgrade-cta-content">
                <i class="far fa-newspaper" id="news-icon-svg"></i>
                <h2 class="signin-title">
                    Sign into your account again for full access
                </h2>

                {{!-- Not logged in: Signin form --}}
                <form class="signin-form" data-members-form="signin">
                    <div class="signin-box">
                        <input data-members-email type="email" placeholder="Your email address" required="true" autocomplete="false" />
                        <button class="button primary" type="submit">
                            <span class="button-content">Send login link</span>
                            <span class="button-loader">{{> "icons/loader"}}</span>
                        </button>
                    </div>
                    
                    <p class="small-white">Don't have an account yet? <a href="{{@site.url}}/signup/">Sign up</a></p>
                    
                    <div class="message-success"><strong>Great!</strong> Check your inbox and click the link to complete signin</div>
                    <div class="message-error">Please enter a valid email address!</div>
                </form>
            </div>
        </aside>
        
        <br>

        
    </article>

    {{/if}}

    </div>
</main>
